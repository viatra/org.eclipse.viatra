<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="org.eclipse.viatra.query.tooling.debug.feature"
      label="VIATRA Query Debug (requires Eclipse Juno+)"
      version="1.3.1.qualifier"
      provider-name="Eclipse VIATRA Project"
      license-feature="org.eclipse.license"
      license-feature-version="0.0.0">

   <description>
      Extends the Java debugger to display the contents of a ViatraQueryEngine in another JVM using the Java Debug API.
   </description>

   <url>
      <update label="VIATRA" url="http://download.eclipse.org/viatra/updates/release/"/>
   </url>

   <requires>
      <import feature="org.eclipse.jdt"/>
      <import feature="org.eclipse.pde"/>
      <import feature="org.eclipse.viatra.query.sdk.feature" version="1.3.0.qualifier"/>
   </requires>

   <plugin
         id="org.eclipse.viatra.query.tooling.debug"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
