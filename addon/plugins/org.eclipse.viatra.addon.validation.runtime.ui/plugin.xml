<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <!--<command
            id="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnSelection"
            name="Initialize EMF-IncQuery Validators on Selected Subtree">
      </command>-->
      <command
            id="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnEditor"
            name="Initialize EMF-IncQuery Validators on Editor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <!--<handler
            class="org.eclipse.viatra.addon.validation.runtime.ui.handlers.InitValidatorsForSelectionHandler"
            commandId="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnSelection">
      </handler>-->
      <handler
            class="org.eclipse.viatra.addon.validation.runtime.ui.handlers.InitValidatorsForEditorHandler"
            commandId="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnEditor">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               id="org.eclipse.viatra.addon.validation.runtime.ui.menu"
               label="EMF-IncQuery Validation">
            <command
                  commandId="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnEditor"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activePartId">
                     <test
                           forcePluginActivation="true"
                           property="org.eclipse.viatra.addon.validation.runtime.ui.hasConstraint">
                     </test>
                  </with>
               </visibleWhen>
            </command>
            <separator
                  name="additions">
            </separator>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.viatra.addon.validation.runtime.ui.menu?after=additions">
         <command
               commandId="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnEditor"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activePartId">
                  <equals
                        value="org.eclipse.emf.ecore.presentation.XMLReflectiveEditorID">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.viatra.addon.validation.runtime.ui.menu?after=additions">
         <command
               commandId="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnEditor"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activePartId">
                  <equals
                        value="org.eclipse.emf.ecore.presentation.ReflectiveEditorID">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.viatra.addon.validation.runtime.ui.menu?after=additions">
         <command
               commandId="org.eclipse.viatra.addon.validation.runtime.ui.initValidatorsOnEditor"
               style="push">
            <visibleWhen
                  checkEnabled="false">
                  <with
                     variable="activePartId">
                  <equals
                        value="org.eclipse.emf.genericEditor">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.eclipse.viatra.addon.validation.runtime.ui.notifierdef">
         <with
               variable="selection">
            <iterate
                  ifEmpty="false"
                  operator="or">
               <instanceof
                     value="org.eclipse.emf.common.notify.Notifier">
               </instanceof>
            </iterate>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.eclipse.viatra.addon.validation.runtime.ui.EditorReferenceTester"
            id="org.eclipse.viatra.addon.validation.runtime.ui.editorReference"
            namespace="org.eclipse.viatra.addon.validation.runtime.ui"
            properties="hasConstraint"
            type="java.lang.String">
      </propertyTester>
   </extension>
</plugin>
